using System;
using System.Globalization;

namespace MyApp
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string nome;
            int numquartos;
            double preco;
            string sobrenome;
            int idade;
            double altura;

            Console.WriteLine("Entre com seu nome completo:");
            nome = Console.ReadLine();
            Console.WriteLine("Quantos quartos tem na sua casa?");
            numquartos = int.Parse(Console.ReadLine());
            Console.WriteLine("Entre com o preço de um produto:");
            preco = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);
            Console.WriteLine("Entre seu último nome, idade e altura (mesma linha):");

            string[] vet = Console.ReadLine().Split(' ');
            sobrenome = vet[0];
            idade = int.Parse(vet[1]);
            altura = double.Parse(vet[2], CultureInfo.InvariantCulture);

            Console.WriteLine($"\nnome: {nome}\nNúmero de quartos: {numquartos}\nPreço do produto: {preco:F2}");
            Console.WriteLine($"sobrenome: {sobrenome}\nidede: {idade}\naltura: {altura.ToString("F2")}");
        }
    }
}
